{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "types": ["jest", "node", "@jest/globals"],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "src/__tests__/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__/jest.component.config.js",
    "src/__tests__/jest.e2e.config.js"
  ]
}
